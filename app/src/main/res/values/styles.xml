<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Indicador del item activo: color + tamaño + forma -->
    <style name="BottomNavIndicator.Purple"
        parent="Widget.Material3.BottomNavigationView.ActiveIndicator">

        <!-- Color de fondo del cuadradito -->
        <item name="android:color">@color/red</item>

        <!-- Lo ensanchamos para que sea casi un cuadrado -->
        <item name="android:width">50dp</item>
        <item name="android:height">50dp</item>


    </style>


    <style name="ProfileHeaderShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <!-- Solo redondeamos la esquina inferior derecha: -->
        <item name="cornerSizeBottomRight">48dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <!-- shape para que la imagen sea redonda -->
    <!-- values/styles.xml -->
    <style name="ShortcutRoundShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>  <!-- o 50% si quieres círculo perfecto -->
    </style>



</resources>


